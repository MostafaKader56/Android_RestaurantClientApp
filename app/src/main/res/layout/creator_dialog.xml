<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/creator_dialog_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"
        android:contentDescription="@string/contentDescription"
        android:layout_margin="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/creator_dialog_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/contentDescription"
        android:layout_marginVertical="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/creator_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/creator_dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/creator_dialog_linkedin"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_linkedin"
            android:contentDescription="@string/contentDescription"
            app:tint="?colorPrimary"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/creator_dialog_facebook"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_facebook"
            android:contentDescription="@string/contentDescription"
            app:tint="?colorPrimary"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/creator_dialog_phone"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_phone"
            android:contentDescription="@string/contentDescription"
            app:tint="?colorPrimary"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
